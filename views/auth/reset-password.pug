extends  ../layout/index

block contenido
    dev.py-10
        h1.text-4xl.my-10.font-extrabold.text-center App 
            span.font-normal Winvale
        h2.text-center.text-2xl.font-extrabold= pagina 

        if errores
            div(class="max-w-md mx-auto my-10")
                 each error  in errores
                    p.bg-red-600.text-red.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg

        .mt-8.mx-auto.max-w-md   
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST"  noValidate)
                
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div     
                        label.block.text-sm-uppercase.text-gray-600.font-bold(for="password") Ingresa tu nuevo password
                        input#password.w-full.px-3.py-2.border.border-gray-400.rounded-md.placeholder-gray-300(placeholder="password" type="password" name="password")

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 cursor-pointer" type="submit" value="Guardar password")    

